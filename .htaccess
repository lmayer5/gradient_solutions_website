# DEBUG MODE: Enable directory browsing to see what is actually on the server
Options +Indexes
DirectoryIndex index.html index.php

# Block access to dotfiles (like .git, .env)
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to the vendor directory
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^vendor/.*$ - [F,L]
    
    # FORCE ROOT TO INDEX.HTML (Fix for stubborn 403s)
    RewriteRule ^$ index.html [L]
</IfModule>
